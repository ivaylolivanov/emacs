#ifndef GAME_H
#define GAME_H

#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>
#include <stdio.h>

class Game
{
private:
    bool isActive;
    SDL_Window* window;
    int counter;

public:

    Game();
    ~Game();

    void init( const char* title, int windWidth, int windoHeight, bool fullscreen );
    void handleEvents();
    void update();
    void render();
    void clean();
    bool isRunning();

    static SDL_Renderer* renderer;
};

#endif
