#include<iostream>
#include<string>

using namespace std;

int count(string a, string b);

int main()
{
    int n;
    string a,b;
    int transforms = 0;

    cin>>n;

    while(--n)
    {
	cin>>a;
	cin>>b;

	transforms = count (a, b);
	cout<< (a.length() - transforms) + (b.length() - transforms)<<"\n";
	transforms = 0;
    }

    return 0;
}

int count(string a, string b)
{
    int count = 0;

    for (ulong i = 0; i<a.length(); ++i) {
	for (ulong j = 0; j<b.length(); ++j) {
	    if (a[i] == b[i]) {
		++count;
		b[i] = 0;
		break;
	    }
	}
    }

    return count;
}
