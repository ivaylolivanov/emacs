Map::Map()
{
    ground = TextureManager::LoadTexture( "Assets/ground.png" );
    coast    = TextureManager::LoadTexture( "Assets/ground.png" );
    lava   = TextureManager::LoadTexture( "Assets/lava.png" );

    loadMap( arena );

    src.x = src.y = 0;
    dest.x = dest.y = 0;

    src.w = dest.w = 32;
    src.h = dest.h = 32;


}

void Map::loadMap( int levelMap[20][25] )
{
    for (int row = 0; row < 20; ++row )
    {
	for (int col = 0; col < 25; ++col )
	{
	    map[row][col] = levelMap[row][col];
	}
    }
}

void Map::drawMap()
{
    int type = 0;

    for (int row = 0; row < 20; ++row )
    {
	for (int col = 0; col < 25; ++col )
	{
	    type = map[row][col];

	    dest.x = col * 32;
	    dest.y = row * 32;

	    switch ( type )
	    {
		case 0:
		    TextureManager::Draw( lava, src, dest );
		    break;
		case 1:
		    TextureManager::Draw( coast, src, dest );
		    break;
		case 2:
		    TextureManager::Draw( ground, src, dest );
		    break;
		default:
		    break;
	    }
	}
    }
}
