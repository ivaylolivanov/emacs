#ifndef KEYBOARD_CONTROLLER
#define KEYBOARD_CONTROLLER

#include "../Game.hpp"
#include "EntityComponentSystem.hpp"
#include "Components.hpp"

class KeyboardConstroller : public Component
{
public:
    TransformComponent* transform;

    void init() override { transform = &entity->getComponent< TransformComponent >(); }
    void update() override {
	if( Game::event.type == SDL_KEYDOWN )
	{
	    switch ( Game::event.key.keysym.sym ) {
		case SDLK_w:
		    transform->getVelocity().setY( -1 );
		    break;
		case SDLK_a:
		    transform->getVelocity().setX( -1 );
		    break;
		case SDLK_d:
		    transform->getVelocity().setX( 1 );
		    break;
		case SDLK_s:
		    transform->getVelocity().setY( 1 );
		default:
		    break;
	    }
	}

	if ( Game::event.type == SDL_KEYUP )
	{
	    switch ( Game::event.key.keysym.sym ) {
		case SDLK_w:
		    transform->getVelocity().setY( 0 );
		    break;
		case SDLK_a:
		    transform->getVelocity().setX( 0 );
		    break;
		case SDLK_d:
		    transform->getVelocity().setX( 0 );
		    break;
		case SDLK_s:
		    transform->getVelocity().setY( 0 );
		default:
		    break;
	    }
	}
    }
};

#endif
