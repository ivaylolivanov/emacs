#include <iostream>
using namespace std;

void change(int index, int change, int* myArr);
void sum (int from, int to, int* myArr);

int main()
{
    int n, q;
    int type, x, y;
    cin>>n>>q;

    int arr[n];
    for (int i = 0; i < n; ++i)
	cin >> arr[i];

    while ((--q) >= 0)
    {
	cin >> type >> x >> y;

	if (type == 1 && x >= 0 && x < n)
	    change(x, y, arr);
	if (type == 2 && x >= 0 && y > x && y <= n)
	    sum(x, y, arr);
	if (type == 2 && !(x >= 0 && y > x && y <= n))
	    cout<<"-1\n";
    }

    return 0;
}

void change(int index, int change, int* myArr)
{
    myArr[index] = change;
}

void sum (int from, int to, int* myArr)
{
    int sum = 0;

    for (int i = from; i <= to; ++i)
	sum += myArr[i];

    cout<<sum<<"\n";
}
